{
  "name": "@zhangyu528/agentsocial",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhangyu528/AgentSocial.git"
  },
  "version": "0.1.2",
  "description": "Giving AI Agents a social identity: Unified bridge for notifications and commands via Feishu, DingTalk, and more.",
  "main": "dist/main.js",
  "bin": {
    "agentsocial": "dist/main.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "cli": "ts-node src/main.ts",
    "dev:setup:init": "ts-node src/main.ts setup init",
    "dev:run": "ts-node src/main.ts run",
    "start": "node dist/main.js",
    "lint": "tsc --noEmit",
    "build": "tsc",
    "test": "jest",
    "test:unit": "jest tests/unit --maxWorkers=50%",
    "test:integration": "jest tests/integration --maxWorkers=50%",
    "test:contract": "jest tests/contract --maxWorkers=50%",
    "test:e2e": "jest tests/e2e/local --runInBand",
    "test:smoke": "jest tests/smoke/feishu-real-chain.smoke.test.ts --runInBand",
    "test:coverage": "jest --config tests/scripts/jest.coverage.config.js",
    "checklists:sync": "node tests/scripts/update-checklists.js",
    "prepare": "husky"
  },
  "keywords": [
    "feishu",
    "lark",
    "bot",
    "gemini",
    "agent"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.58.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}





