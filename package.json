{
  "name": "@zhangyu528/agentsocial",
  "publishConfig": {
    "registry": "https://npm.pkg.github.com"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/zhangyu528/AgentSocial.git"
  },
  "version": "0.2.0",
  "description": "Giving AI Agents a social identity: Unified bridge for notifications and commands via Feishu, DingTalk, and more.",
  "main": "dist/src/main.js",
  "bin": {
    "agentsocial": "dist/src/main.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/main.ts",
    "dev:setup": "ts-node src/main.ts setup",
    "dev:run": "ts-node src/main.ts run",
    "start": "node dist/src/main.js",
    "clean": "rm -rf dist sessions",
    "lint": "tsc --noEmit",
    "build": "tsc",
    "test": "jest",
    "test:coverage": "jest --config tests/jest.coverage.config.js",
    "test:checklist": "node tests/scripts/update-functional-checklist.js",
    "check:test-checklist": "node tests/scripts/check-functional-checklist.js",
    "pre-push:quality": "npm run test:checklist && npm run check:test-checklist",
    "prepare": "husky"
  },
  "keywords": [
    "feishu",
    "lark",
    "bot",
    "gemini",
    "agent"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@larksuiteoapi/node-sdk": "^1.58.0",
    "chalk": "^4.1.2",
    "cli-table3": "^0.6.5"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^25.2.0",
    "husky": "^9.1.7",
    "jest": "^30.2.0",
    "lint-staged": "^16.2.7",
    "nock": "^14.0.11",
    "ts-jest": "^29.4.6",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}


